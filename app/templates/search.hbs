{{page-title "Search"}}



{{!-- input box --}}
<div class="input-div">
    {{input type="text"  placeholder="Enter Directory || eg:D:/ or D:/folder-name" class="input-box"  value=this.directoryPath}}<br><br>
    {{input list="keywords-sug"  placeholder="Enter filename/keyword" class="input-box" value=this.keyword}}
    <datalist id="keywords-sug">
        <option value={{this.user.keywordData.[0]}}></option>
        <option value={{this.user.keywordData.[1]}}></option>
        <option value={{this.user.keywordData.[2]}}></option>
    </datalist>
    <br><br>
    <button type="button" class="button"{{on "click" (fn this.getFiles this.directoryPath this.keyword)}}>Search</button>
</div>

<br><br>

{{!-- result table --}}
{{#if this.result.files}}

<Table @result={{this.result}} />

{{/if}}



